{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true
    },
    "rules": {
        "semi": [2, "never"],
        "no-unexpected-multiline": 2,
        "no-unused-vars": ["warn", { "args": "none" }],
        "no-constant-condition": ["warn", { "checkLoops": false }],
        "comma-dangle": ["warn", "always-multiline"]
    }
}
